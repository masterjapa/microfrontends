{
  "private": true,
  "scripts": {
    "ls": "lerna ls",
    "start": "lerna run --scope \"@microfrontend/*\" --parallel start:lerna",
    "build": "lerna run --scope \"@microfrontend/*\" build",
    "serve": "lerna run --scope \"@microfrontend/*\" --parallel serve",
    "clean": "lerna run --scope \"@microfrontend/*\" --parallel clean",
    "install:lerna": "lerna run --scope \"@microfrontend/*\" --parallel install:lerna"
  },
  "devDependencies": {
    "lerna": "^7.4.2"
  },
  "workspaces": [
    "packages/*"
  ]
}
